<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="#FF5722"
    android:orientation="vertical"
    tools:context="com.example.gregoryjones.project2.MainActivity3"
    tools:showIn="@layout/activity_main3">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Original Message"
        android:textStyle="bold"
        android:textSize = "20sp"
        android:textColor ="#FFFF"
        android:id="@+id/textView_OriginalMessage" />


    <TextView
        android:id="@+id/textView_GPSDATA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/textView_OriginalMessage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cipher Text"
        android:textSize = "20sp"
        android:textStyle="bold"
        android:textColor ="#FFFF"
        android:id="@+id/CipherText"
        android:layout_below="@+id/textView_GPSDATA"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Decrypted Message"
        android:textSize = "20sp"
        android:textStyle="bold"
        android:textColor ="#FFFF"
        android:id="@+id/textView_DecryptedMessage"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="ENCRYPT BY XOR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_EncryptedXOR"
        android:layout_marginBottom="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="DECRYPT BY XOR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_DecryptXOR"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignBaseline="@+id/button_EncryptedXOR"
        android:layout_alignBottom="@+id/button_EncryptedXOR"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView_EncryptionCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="5sp"
        android:layout_below="@+id/textView_EncryptedDataStatement3" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=""
        android:textSize="10sp"
        android:id="@+id/textView_EncryptedDataStatement3"
        android:layout_below="@+id/CipherText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:hint=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/textView_EncryptedDataStatement4"
        android:layout_below="@+id/textView_DecryptedMessage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/textView_DecryptionCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_alignTop="@+id/textView_EncryptedDataStatement4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />


</RelativeLayout>
